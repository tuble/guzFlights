@model guzFlightsUltra.BindingModels.User.EditBindingModel

<section class="py-5">
    <div class="container">
        <h1>Edit User @Model.Id</h1>
        <form method="post" action="/User/Edit">

            <!--edit roles? -->

            <div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName">
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName">
                </div>
                <div class="form-group">
                    <label for="SSN">SSN</label>
                    <input type="text" class="form-control" id="SSN" name="SSN" value="@Model.SSN">
                </div>
                <div class="form-group">
                    <label for="departureTime">Address</label>
                    <input type="text" class="form-control" id="address" name="Address" value="@Model.Address">
                </div>
                <div class="form-group" style="display: none">
                    <input type="text" class="form-control" id="id" name="Id" value="@Model.Id">
                </div>
                @if (User.IsInRole("Administrator"))
                {
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-danger">Edit User Data</button>
                    </div>
                }
            </div>
        </form>

    </div>
</section>
